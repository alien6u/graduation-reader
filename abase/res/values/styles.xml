<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- layout  width height -->
    <style name="w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="m">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wm_hw" parent="m">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ww_hm" parent="m">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ll_wm_hw_v" parent="wm_hw">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ll_wm_hw_h" parent="wm_hw">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ll_m_v" parent="m">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ll_m_h" parent="m">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ll_w_h" parent="w">
        <item name="android:orientation">horizontal</item>
    </style>
      <style name="ll_w_v" parent="w">
        <item name="android:orientation">vertical</item>
    </style>



</resources>